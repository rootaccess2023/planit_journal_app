<div class="w-full flex flex-col px-8 gap-4 md:flex-row md:max-w-[65rem] md:mx-auto">
  <div class="w-full flex flex-col items-center justify-center p-8 gap-8">
    <div>
      <%= render "layouts/calendar"%>
    </div>
    <div class="hidden md:block  md:w-full md:h-full">
      <%= render "entries/stats"%>
    </div>
  </div>
  <div class="w-full md:py-8">
    <% content_for :title, "Entries" %>
    <div class="flex justify-between items-center mb-2">
      <h1 class="text-3xl font-semibold">Plans</h1>
      <%= link_to new_entry_path do %>
      <span class="font-semibold hover:text-blue-500 cursor-pointer">
        <%= fa_icon "plus-square" %>
        ADD
      </span>
      <% end %>
    </div>
    <div id="entries" class="h-64 overflow-scroll md:h-full">
      <% @entries.each do |entry| %>
        <%= render entry %>
      <% end %>
    </div>
  </div>
</div>

