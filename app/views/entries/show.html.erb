<div class="mx-auto md:w-2/3 w-full flex flex-col p-8">
  <section class="flex justify-between">
      <div class="text-2xl text-gray-500 hover:text-gray-800">
        <%= link_to entries_path do %>
            <%= fa_icon "arrow-left"%>
        <% end %>
      </div>
      <div class="flex text-xl gap-2">
        <span class="text-gray-500 hover:text-blue-600">
            <%= link_to edit_entry_path(@entry) do %>
                <%= fa_icon "pencil"%>
            <% end %>
        </span>
        <span class="text-gray-500 hover:text-red-600">
            <%= button_to @entry, method: :delete, data: {turbo_confirm: "Are you sure?"} do %>
                <%= fa_icon "trash"%>
            <% end %>
        </span>
      </div>
    </section>
    <h1 class="text-gray-700 text-2xl text-center font-semibold my-6">
        <%= @entry.start_time.strftime("%A, %d %B %Y")%>
    </h1>
  <div class="w-full mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render "entries/display"%>
</div>